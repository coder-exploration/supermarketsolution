@model SuperMarket.MVC.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/layout.cshtml";
    var base64 = Convert.ToBase64String(ViewBag.Product.Photo);
    var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);    
}

<h2>Details</h2>
<div>
    <div class="row">
        <div class="col-md-6 product_img">
            <img src="@imgSrc" class="img-responsive">
        </div>
        <div class="col-md-6 product_content">
            <h4>@ViewBag.Product.Name</h4>
            <p>@ViewBag.Product.Description</p>
            <h3 class="cost"><span class="glyphicon glyphicon-usd"></span> @ViewBag.Product.Price </h3>
            <div class="row">
                <h3>Available Quantity - @ViewBag.Product.QuantityAvailable</h3>
            </div>
            <div class="space-ten"></div>
            <div class="btn-ground">

                <button type="button" class="btn btn-primary">Edit</button>
                <button type="button" class="btn btn-primary">Delete</button>
                <a href="@Url.Action("Index", "Home")" class="btn  btn-primary">Go To Home</a>
            </div>
        </div>
    </div>
</div>
